{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Allium Model Schema",
    "type": "object",
    "required": [
        "name",
        "fields"
    ],
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[A-Z][a-zA-Z0-9]*$",
            "description": "Model name in PascalCase"
        },
        "fields": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/field"
            },
            "minItems": 1
        },
        "relations": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/relation"
            },
            "default": []
        },
        "softDelete": {
            "type": "boolean",
            "default": false
        },
        "auditTrail": {
            "type": "boolean",
            "default": false
        },
        "constraints": {
            "type": "object",
            "properties": {
                "unique": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "indexes": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "api": {
            "$ref": "#/definitions/apiConfig"
        }
    },
    "definitions": {
        "field": {
            "type": "object",
            "required": [
                "name",
                "type"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[a-z][a-zA-Z0-9]*$"
                },
                "type": {
                    "enum": [
                        "String",
                        "Int",
                        "Float",
                        "Boolean",
                        "DateTime",
                        "Json",
                        "Enum"
                    ]
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "description": "Allowed values for Enum type fields"
                },
                "required": {
                    "type": "boolean",
                    "default": true
                },
                "unique": {
                    "type": "boolean",
                    "default": false
                },
                "default": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "number"
                        },
                        {
                            "type": "boolean"
                        }
                    ]
                },
                "private": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, field will be excluded from API responses"
                },
                "writePrivate": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, field cannot be set by users (auto-generated only)"
                },
                "encrypted": {
                    "type": "boolean",
                    "default": false
                },
                "masked": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "required": [
                                "pattern"
                            ],
                            "properties": {
                                "pattern": {
                                    "type": "string"
                                },
                                "visibleStart": {
                                    "type": "integer"
                                },
                                "visibleEnd": {
                                    "type": "integer"
                                }
                            }
                        }
                    ]
                },
                "virtual": {
                    "type": "boolean",
                    "default": false
                },
                "computed": {
                    "type": "object",
                    "properties": {
                        "template": {
                            "type": "string"
                        },
                        "transform": {
                            "type": "string"
                        }
                    }
                },
                "jsonSchema": {
                    "type": "object"
                }
            }
        },
        "relation": {
            "type": "object",
            "required": [
                "name",
                "type"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[a-z][a-zA-Z0-9]*$"
                },
                "model": {
                    "type": "string",
                    "description": "Referenced model name (required for non-polymorphic)"
                },
                "models": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 2,
                    "description": "Referenced models for polymorphic relations"
                },
                "type": {
                    "enum": [
                        "1:1",
                        "1:n",
                        "n:m",
                        "polymorphic"
                    ]
                },
                "foreignKey": {
                    "type": "string",
                    "description": "Custom foreign key field name"
                },
                "references": {
                    "type": "string",
                    "default": "id",
                    "description": "Referenced field in related model"
                },
                "onDelete": {
                    "enum": [
                        "Cascade",
                        "SetNull",
                        "NoAction",
                        "Restrict"
                    ]
                }
            }
        },
        "apiConfig": {
            "type": "object",
            "properties": {
                "prefix": {
                    "type": "string",
                    "pattern": "^/.*"
                },
                "operations": {
                    "type": "array",
                    "items": {
                        "enum": [
                            "create",
                            "read",
                            "update",
                            "delete",
                            "list"
                        ]
                    },
                    "default": [
                        "create",
                        "read",
                        "update",
                        "delete",
                        "list"
                    ]
                },
                "rateLimit": {
                    "type": "object",
                    "required": [
                        "max",
                        "timeWindow"
                    ],
                    "properties": {
                        "max": {
                            "type": "integer"
                        },
                        "timeWindow": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}