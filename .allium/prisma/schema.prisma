generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model TestUser {
  id        String   @id @default(uuid())
  uuid      String   @unique @default(uuid())
  name String
  email String @unique
  bio String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApiKey {
  id        String   @id @default(uuid())
  name      String
  key       String   @unique
  service   String
  isActive  Boolean  @default(true)
  expiresAt DateTime?
  lastUsedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
